{
    "colors": {
        "background": "#2E3440",
        "error": "#BF616A",
        "highlight": "#88C0D0",
        "text": "#D8DEE9",
        "warning": "#EBCB8B"
    },
    "logging": {
        "fileLogging": false,
        "level": "info",
        "logFile": "navigation.log"
    },
    "mapDisplay": {
        "defaultZoom": 1.0,
        "maxZoom": 3.0,
        "minZoom": 0.5,
        "tilesHeight": 40,
        "tilesWidth": 60
    },
    "paths": {
        "configDirectory": "config/",
        "defaultMap": "map.tmj",
        "mapsDirectory": "maps/",
        "tilesDirectory": "tiles/"
    },
    "performance": {
        "targetFPS": 60,
        "textureFilter": 1,
        "vsync": true
    },
    "ui": {
        "mapButton": {
            "anchorRight": true,
            "bgColor": "#333333",
            "enabled": false,
            "fontSize": 14,
            "height": 30,
            "hoverColor": "#444444",
            "label": "Map",
            "textColor": "#FFFFFF",
            "width": 80,
            "x": -90,
            "y": 10
        }
    },
    "window": {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Navigation System",
        "width": 800
    }
}